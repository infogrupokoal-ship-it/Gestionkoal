# Entorno de Flask
FLASK_ENV=development
FLASK_APP=backend

# Clave secreta para sesiones (cambiar en producción)
SECRET_KEY=dev-secret-change-me

# Ruta a la base de datos. Por defecto, un fichero SQLite en la carpeta 'instance'.
DATABASE_URL=sqlite:///instance/gestion_avisos.sqlite

# --- APIs Externas (Opcional pero recomendado) ---

# Google Custom Search Engine (para estudios de mercado)
# Se pueden obtener en https://programmablesearchengine.google.com/
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ID=

# Gemini API (para el asistente de IA)
# Se puede obtener en https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# WhatsApp Cloud API (para notificaciones)
# Configuración en Meta for Developers
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=
